<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products collections</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body>
    <h2>Welcome to ProductList</h2>
    <div class="d-flex flex-wrap gap-3">
      <% for(product of allProducts) { %>
      <div class="card" style="width: 18rem">
        <img src="..." class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= product.product_name %></h5>
          <p class="card-text"><%= product.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= product.price %></li>
        </ul>
        <div class="card-body">
          <form action="/api/products/<%= product._id %>/edit">
            <button type="submit" class="btn btn-warning">Edit</button>
          </form>
          <form action="/api/products/<%= product._id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>

      <% } %>
    </div>

    <form action="/api/products/create" method="get">
      <button type="submit" class="btn btn-outline-primary">
        Add new Product
      </button>
    </form>

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
